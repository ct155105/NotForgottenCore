@model NotForgottenCore.Models.Table

@{

    int nbrOpenSeats = Model.OpenSeats;
    string tableFull = "";
    string openSeats = Model.OpenSeats.ToString();

    if (nbrOpenSeats < 8)
    {
        tableFull = "_full";
    }

    //Number seats hard coded. Need to create images for different number of seats.
    if(Model.TableType == "short")
    {
        openSeats = "12";
    }
    else if(Model.TableType == "round")
    {
        openSeats = "8";
    }
    else
    {
        openSeats = "36";
    }

    string source = "images/tables/" + Model.TableType + "_" + openSeats + tableFull + ".svg";
}

<img class="img-fluid" src="@source" />