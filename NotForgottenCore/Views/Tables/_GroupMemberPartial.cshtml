@model List<NotForgottenCore.Models.GroupMember>

@for (int i = 0; i < Model.Count; i++)
{
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="@Model[i].GroupId" type="hidden" />
    <div class="form-group">
        <label class="control-label">Person@(i + 1)</label>
        <input asp-for="@Model[i].Name" class="form-control" />
        <span asp-validation-for="@Model[i].Name" class="text-danger"></span>
        <input asp-for="@Model[i].Id" type="hidden" />
    </div>
}

