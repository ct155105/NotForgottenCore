@model List<NotForgottenCore.Models.SingleTickets>

@{

}

@for (int i = 0; i < Model.Count; i++)
{
<div class="form-group">
    <label class="control-label">Person@(i + 1)</label>
    <input asp-for="@Model[i].Name" class="form-control" />
    <span asp-validation-for="@Model[i].Name" class="text-danger"></span>
    <input asp-for="@Model[i].Id" type="hidden" />
</div>
}
